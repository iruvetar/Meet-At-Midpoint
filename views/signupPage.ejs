<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Welcome to Meet at the mid points service">
    <meta name="author" content="Yun-Tieh Chen">

    <title>Signup Page</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template -->
    <link href="css/landing-page.css" rel="stylesheet">

  </head>

  <body>

    <!-- Navigation -->
    <!-- Insert navbar ejs -->
    <%- include ./navbar.ejs %>
    

    <!-- Header -->
    

    <!-- Page Content -->
    <section class="content-section-a">

      <div class="container">
      <br><br>
<div class="col-sm-6 col-sm-offset-3">

    <h2><span class="fa fa-sign-in"></span> Signup</h2>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-lg btn-warning">Register</button>
    </form>

    <hr>

    <p>Already have an account?  <a class = "btn btn-sm btn-primary" href="/login">Login</a></p>
    
    <p>Or go back to  <a class = "btn btn-sm btn-primary" href="/">home</a></p>

</div>

      </div>
      <!-- /.container -->
    </section>


    <!-- Footer -->
    <!-- Insert footer ejs -->
    <%- include ./footer.ejs %>

  </body>

</html>
