<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Service Result Page">
    <meta name="author" content="Yun-Tieh Chen">
    <title>Let's travel in the middle-Search Result Page</title>
    
    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template -->
    <link href="css/service-page.css" rel="stylesheet">

</head>
<body>
     <!-- Navigation -->
     <!-- Insert navbar ejs -->
    <%- include ./navbar.ejs %>
    
    <!-- Map -->
    <!--Google  API key : AIzaSyD3eFiCwJPtgcaTbOE2Y4PWkL2FQqzWnQg-->
    <section>
        <div class="google-map">
        <iframe id="googleMapFrame" width="100%" height="450" frameborder="0" scrolling="no"
        src="https://www.google.com/maps/embed/v1/directions?key=AIzaSyD3eFiCwJPtgcaTbOE2Y4PWkL2FQqzWnQg&origin=<%= depart1 %>&destination=<%= depart2 %>&mode=flying" allowfullscreen></iframe>
        </div>
    </section>
    
    <!-- Page Content -->
    <section class="content-section-a">
      
      <div class="container">
       <% if (errMsg) { %>
       <!-- If Error Message Received -->
        <div class="row">
            <div class="response-area">
               <i class="fa fa-exclamation-triangle fa-2x" aria-hidden="true"></i><%= errMsg %>
            </div>
        </div>
       <%} else {%>
       <!-- Correct Output Received -->
        <div class="row">
            <div class="response-area2">
                <h2>Recommendation Results for flight on <%= date %></h2>
                <br><hr><br>
                <table>
                    <tr>
                        <td><i class="fa fa-map-marker fa-2x" aria-hidden="true"></i></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><i class="fa fa-map-marker fa-2x" aria-hidden="true"></i></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><i class="fa fa-map-marker fa-2x" aria-hidden="true"></i></td>
                    </tr>
                    <tr>
                        <td><h4><%= place1 %></h4></td>
                        <td>   </td>
                        <td><i class="fa fa-long-arrow-right" aria-hidden="true"></i></td>
                        <td>   </td>
                        <td><h4 id="highlightRes"><%= destination[0].name + " (" + destination[0].key + ")"%></h4></td>
                        <td>   </td>
                        <td><i class="fa fa-long-arrow-left" aria-hidden="true"></i></td>
                        <td>   </td>
                        <td><h4><%= place2 %></h4></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>  </td>
                        <td>$ <%= fare1 %></td>
                        <td>  </td>
                        <td></td>
                        <td>  </td>
                        <td>$ <%= fare2 %></td>
                        <td>  </td>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
       <%}%>
          <br><br><br>
          <a href="/service" class="btn btn-secondary btn-lg">
          <span class="network-name">Search Again</span>
          </a>
      </div>
    </section>



    <!-- Footer -->
    <!-- Insert footer ejs -->
    <%- include ./footer.ejs %>
    <!-- Custome JavaScript -->
    <script src=""></script>
  </body>
</html>